<!DOCTYPE html>
<html ng-app="portfolioApp" ng-controller="MainCtrl">
<head>
  <title>RyanRusnak</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <% if flash[:notice] %>
      <div class="alert alert-info" role="alert"><%= notice %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-warning" role="alert"><%= alert %></div>
    <% end %>
    <span class="glyphicon glyphicon-menu-hamburger nav-menu" aria-hidden="true" ng-click="flyout='show-flyout'"></span>
    <%= render partial: 'layouts/flyout' %>
    <%= yield %>
  </div>
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-29107672-1', 'auto');
  ga('send', 'pageview');

</script>
</body>
</html>
